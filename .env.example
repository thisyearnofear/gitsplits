# GitSplits X Agent Environment Configuration

# ===== Frontend Configuration =====

# Standalone agent backend (required for /api/agent proxy)
AGENT_BASE_URL=http://localhost:3001
# Optional shared secret sent as x-agent-api-key from web -> agent
AGENT_API_KEY=

# NEAR Contract Configuration (Frontend)
NEXT_PUBLIC_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_contractId=gitsplits-worker.papajams.near
NEXT_PUBLIC_accountId=your_account_id_here
NEXT_PUBLIC_secretKey=your_secret_key_here
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Firebase Configuration (for verification)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Security Configuration
MIN_REPO_AGE_DAYS=7
MIN_X_ACCOUNT_AGE_DAYS=90
MIN_X_FOLLOWERS=10
VERIFICATION_EXPIRATION_HOURS=24

# ===== Worker Agent Configuration =====

# NEAR Configuration (Worker)
NEAR_NETWORK_ID=mainnet
NEAR_NODE_URL=https://rpc.mainnet.near.org
NEAR_CONTRACT_ID=gitsplits-worker.papajams.near
NEAR_WALLET_URL=https://wallet.mainnet.near.org
NEAR_HELPER_URL=https://helper.mainnet.near.org
NEAR_ACCOUNT_ID=your_account_id_here
NEAR_PRIVATE_KEY=your_private_key_here

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# Twitter Configuration (Cookie Auth)
TWITTER_AUTH_TOKEN=your_twitter_auth_token
TWITTER_CT0=your_twitter_ct0_token
TWITTER_SCREEN_NAME=gitsplits
TWITTER_LAST_TIMESTAMP=0

# Masa.ai API Configuration (Twitter Scraping)
MASA_API_KEY=your_masa_api_key
MASA_ENDPOINT=https://api.masa.ai/v1
MASA_SEARCH_INTERVAL=60000

# Crosspost.near Configuration (Twitter Posting)
CROSSPOST_CONTRACT_ID=crosspost.near
USE_MASA_FOR_MENTIONS=true
USE_CROSSPOST_FOR_TWEETS=true

# Server Configuration
PORT=3001
