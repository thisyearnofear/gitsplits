# GitSplits Agent - EigenCloud Deployment
# Runs in TEE for verifiable execution

FROM --platform=linux/amd64 node:18-slim AS builder
WORKDIR /app

# Install dependencies once, build, then prune dev deps for runtime copy.
COPY package*.json ./
RUN npm ci

COPY tsconfig.json ./
COPY src ./src
RUN npm run build
RUN npm prune --omit=dev && npm cache clean --force

FROM --platform=linux/amd64 node:18-slim
WORKDIR /app

# curl is used by Docker healthcheck.
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/package*.json ./
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/dist ./dist

# EigenCompute TEE requires root user.
USER root

ENV NODE_ENV=production
ENV PORT=3000
EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -fsS http://localhost:3000/health || exit 1

CMD ["node", "dist/server.js"]
